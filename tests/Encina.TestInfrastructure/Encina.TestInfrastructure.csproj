<Project Sdk="Microsoft.NET.Sdk">

  <!-- This is a support library (fixtures, schemas), not a test project.
       xunit packages are needed for types (IAsyncLifetime, [Collection], etc.)
       but they inject TestContainer which breaks Test Explorer (no testhost).
       Remove the capability to prevent test discovery errors. -->
  <ItemGroup>
    <ProjectCapability Remove="TestContainer" />
  </ItemGroup>

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <RootNamespace>Encina.TestInfrastructure</RootNamespace>
    <!-- Suppress CS0618 for Testcontainers obsolete constructors until we migrate to new API -->
    <NoWarn>$(NoWarn);CS0618</NoWarn>
  </PropertyGroup>

  <!-- EF Core Provider Packages -->
  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" />
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" />
    <!-- Pomelo.EntityFrameworkCore.MySql: Waiting for v10.0.0 (EF Core 10 support) -->
    <!-- See: https://github.com/PomeloFoundation/Pomelo.EntityFrameworkCore.MySql/pull/2019 -->
    <!-- <PackageReference Include="Pomelo.EntityFrameworkCore.MySql" /> -->
    <PackageReference Include="Oracle.EntityFrameworkCore" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Bogus" />
    <PackageReference Include="FsCheck" />
    <PackageReference Include="Testcontainers" />
    <PackageReference Include="Testcontainers.MsSql" />
    <PackageReference Include="Testcontainers.PostgreSql" />
    <PackageReference Include="Testcontainers.MySql" />
    <PackageReference Include="Testcontainers.MongoDb" />
    <PackageReference Include="Testcontainers.RabbitMq" />
    <PackageReference Include="Testcontainers.Kafka" />
    <PackageReference Include="Testcontainers.Nats" />
    <PackageReference Include="Testcontainers.Redis" />
    <PackageReference Include="Testcontainers.LocalStack" />
    <PackageReference Include="AWSSDK.SQS" />
    <PackageReference Include="AWSSDK.SimpleNotificationService" />
    <PackageReference Include="Microsoft.Data.Sqlite" />
    <PackageReference Include="Microsoft.Data.SqlClient" />
    <PackageReference Include="MySqlConnector" />
    <PackageReference Include="Npgsql" />
    <PackageReference Include="Oracle.ManagedDataAccess.Core" />
    <PackageReference Include="xunit.v3" />
    <PackageReference Include="xunit.v3.core" />
    <PackageReference Include="xunit.SkippableFact" />
    <PackageReference Include="Shouldly" />
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks.Abstractions" />
    <PackageReference Include="Dapper" />
    <PackageReference Include="MongoDB.Driver" />
    <PackageReference Include="RabbitMQ.Client" />
    <PackageReference Include="Confluent.Kafka" />
    <PackageReference Include="NATS.Net" />
    <PackageReference Include="MQTTnet" />
    <PackageReference Include="StackExchange.Redis" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Encina\Encina.csproj" />
    <ProjectReference Include="..\..\src\Encina.Messaging\Encina.Messaging.csproj" />
    <ProjectReference Include="..\..\src\Encina.Dapper.Sqlite\Encina.Dapper.Sqlite.csproj" />
    <ProjectReference Include="..\..\src\Encina.DomainModeling\Encina.DomainModeling.csproj" />
    <ProjectReference Include="..\..\src\Encina.EntityFrameworkCore\Encina.EntityFrameworkCore.csproj" />
    <ProjectReference Include="..\..\src\Encina.Tenancy\Encina.Tenancy.csproj" />
  </ItemGroup>

</Project>
