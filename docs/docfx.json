{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Encina",
      "_appTitle": "Encina - Build resilient .NET applications with Railway Oriented Programming",
      "_enableSearch": true,
      "_gitContribute": {
        "repo": "https://github.com/dlrivada/Encina",
        "branch": "main"
      },
      "_gitUrlPattern": "github",
      "pdf": false
    }
  }
}