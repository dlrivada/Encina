# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for shell scripts and workflows
*.sh text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Force LF for common config files
*.json text eol=lf
*.md text eol=lf
.gitattributes text eol=lf
.gitignore text eol=lf
.editorconfig text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.dll binary
*.exe binary
*.snk binary
