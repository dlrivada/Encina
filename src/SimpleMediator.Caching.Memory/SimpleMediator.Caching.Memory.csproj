<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>SimpleMediator.Caching.Memory</PackageId>
    <Description>In-memory caching provider for SimpleMediator using Microsoft.Extensions.Caching.Memory. Provides fast local caching for single-instance scenarios.</Description>
    <PackageTags>mediator;cqrs;caching;memory;IMemoryCache</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\SimpleMediator.Caching\SimpleMediator.Caching.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" />
    <PackageReference Include="Microsoft.Extensions.Options" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
    <PackageReference Include="Microsoft.CodeAnalysis.PublicApiAnalyzers" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="Microsoft.Extensions.Caching.Memory" />
    <Using Include="Microsoft.Extensions.Options" />
    <Using Include="Microsoft.Extensions.Logging" />
    <Using Include="SimpleMediator.Caching" />
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="PublicAPI.Shipped.txt" />
    <AdditionalFiles Include="PublicAPI.Unshipped.txt" />
  </ItemGroup>
</Project>
