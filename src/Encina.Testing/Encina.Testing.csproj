<Project Sdk="Microsoft.NET.Sdk">

  <ItemGroup>
    <InternalsVisibleTo Include="Encina.UnitTests" />
    <InternalsVisibleTo Include="Encina.IntegrationTests" />
    <InternalsVisibleTo Include="Encina.ContractTests" />
    <InternalsVisibleTo Include="Encina.PropertyTests" />
  </ItemGroup>

  <ItemGroup>
    <ProjectCapability Remove="TestContainer" />
  </ItemGroup>

  <PropertyGroup>
    <IsTestProject>false</IsTestProject>
    <OutputType>Library</OutputType>
    <PackageId>Encina.Testing</PackageId>
    <Description>Testing utilities for Encina - fixtures, fluent assertions, and mock helpers for Railway Oriented Programming.</Description>
    <PackageTags>encina;testing;xunit;assertions;rop;railway-oriented-programming</PackageTags>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <IncludeSymbols>false</IncludeSymbols>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="TngTech.ArchUnitNET.xUnitV3" />
    <PackageReference Include="LanguageExt.Core" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
    <PackageReference Include="Shouldly" />
    <PackageReference Include="xunit.v3.extensibility.core" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Encina\Encina.csproj" />
    <ProjectReference Include="..\Encina.DomainModeling\Encina.DomainModeling.csproj" />
    <ProjectReference Include="..\Encina.Testing.Fakes\Encina.Testing.Fakes.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE" Pack="true" PackagePath="" Link="LICENSE" />
  </ItemGroup>

</Project>
