<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>SimpleMediator.Caching.Redis</PackageId>
    <Description>Redis caching provider for SimpleMediator using StackExchange.Redis. Provides distributed caching with pub/sub and distributed locks for multi-instance scenarios.</Description>
    <PackageTags>mediator;cqrs;caching;redis;distributed</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\SimpleMediator.Caching\SimpleMediator.Caching.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="StackExchange.Redis" />
    <PackageReference Include="Microsoft.Extensions.Options" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
    <PackageReference Include="Microsoft.CodeAnalysis.PublicApiAnalyzers" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="StackExchange.Redis" />
    <Using Include="Microsoft.Extensions.Options" />
    <Using Include="Microsoft.Extensions.Logging" />
    <Using Include="SimpleMediator.Caching" />
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="PublicAPI.Shipped.txt" />
    <AdditionalFiles Include="PublicAPI.Unshipped.txt" />
  </ItemGroup>
</Project>
