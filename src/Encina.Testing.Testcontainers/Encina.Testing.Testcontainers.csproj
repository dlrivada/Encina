<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>Encina.Testing.Testcontainers</PackageId>
    <VersionPrefix>0.1.0</VersionPrefix>
    <Authors>David Lozano Rivada;Daniel Lozano Rivada</Authors>
    <Company>Consulta Psicologica</Company>
    <Description>Testcontainers integration for Encina. Provides pre-configured xUnit fixtures for spinning up real database instances in Docker during integration tests. Supports SQL Server, PostgreSQL, MySQL, MongoDB, and Redis.</Description>
    <RepositoryUrl>https://github.com/dlrivada/Encina</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>encina;testing;testcontainers;docker;integration-tests;database;sql-server;postgresql;mysql;mongodb;redis</PackageTags>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Testcontainers" />
    <PackageReference Include="Testcontainers.MsSql" />
    <PackageReference Include="Testcontainers.PostgreSql" />
    <PackageReference Include="Testcontainers.MySql" />
    <PackageReference Include="Testcontainers.MongoDb" />
    <PackageReference Include="Testcontainers.Redis" />
    <PackageReference Include="xunit.v3.core" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Encina.Testing.Respawn\Encina.Testing.Respawn.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE" Pack="true" PackagePath="" Link="LICENSE" />
  </ItemGroup>

</Project>
