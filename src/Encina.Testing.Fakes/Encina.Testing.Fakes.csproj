<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>Encina.Testing.Fakes</PackageId>
    <Description>In-memory test doubles for Encina - FakeEncina, FakeOutboxStore, FakeInboxStore, FakeSagaStore, and more. Enables unit testing without mocking frameworks.</Description>
    <PackageTags>encina;testing;fakes;test-doubles;mocking;unit-testing;rop;railway-oriented-programming</PackageTags>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LanguageExt.Core" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Encina\Encina.csproj" />
    <ProjectReference Include="..\Encina.Messaging\Encina.Messaging.csproj" />
    <ProjectReference Include="..\Encina.Caching\Encina.Caching.csproj" />
    <ProjectReference Include="..\Encina.Cdc\Encina.Cdc.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE" Pack="true" PackagePath="" Link="LICENSE" />
  </ItemGroup>

</Project>
