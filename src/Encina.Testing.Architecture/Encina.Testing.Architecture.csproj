<Project Sdk="Microsoft.NET.Sdk">

  <ItemGroup>
    <ProjectCapability Remove="TestContainer" />
  </ItemGroup>

  <PropertyGroup>
    <IsTestProject>false</IsTestProject>
    <OutputType>Library</OutputType>
    <PackageId>Encina.Testing.Architecture</PackageId>
    <Description>Architecture testing rules for Encina using ArchUnitNET. Provides pre-built rules for enforcing clean architecture patterns, handler dependencies, request immutability, and layer separation.</Description>
    <PackageTags>encina;testing;architecture;archunit;clean-architecture;ddd;rules</PackageTags>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <IncludeSymbols>false</IncludeSymbols>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <!-- NOTE: If this assembly is strong-named (signed), update InternalsVisibleTo to include
       the test assembly's PublicKey, e.g.: Include="Encina.UnitTests, PublicKey=..." -->
  <ItemGroup>
    <InternalsVisibleTo Include="Encina.UnitTests" />
    <InternalsVisibleTo Include="Encina.IntegrationTests" />
    <InternalsVisibleTo Include="Encina.ContractTests" />
    <InternalsVisibleTo Include="Encina.PropertyTests" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="TngTech.ArchUnitNET.xUnitV3" />
    <PackageReference Include="xunit.v3.extensibility.core" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Encina\Encina.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE" Pack="true" PackagePath="" Link="LICENSE" />
    <None Include="README.md" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
