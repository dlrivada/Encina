<Project Sdk="Microsoft.NET.Sdk">

  <ItemGroup>
    <ProjectCapability Remove="TestContainer" />
  </ItemGroup>

  <PropertyGroup>
    <PackageId>Encina.Testing.TUnit</PackageId>
    <VersionPrefix>0.1.0</VersionPrefix>
    <Authors>David Lozano Rivada;Daniel Lozano Rivada</Authors>
    <Company>Consulta Psicologica</Company>
    <Description>TUnit testing framework integration for Encina with NativeAOT compatibility. Provides source-generated test discovery, async fixtures, and Either type assertions.</Description>
    <RepositoryUrl>https://github.com/dlrivada/Encina</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>encina;testing;tunit;nativeaot;aot;source-generators;async-testing;either;rop;railway-oriented-programming</PackageTags>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <IncludeSymbols>false</IncludeSymbols>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <!-- This is a library, not a test application -->
    <OutputType>Library</OutputType>
    <IsTestProject>false</IsTestProject>
    <!-- Disable MTP test discovery capabilities that TUnit injects -->
    <IsTestingPlatformApplication>false</IsTestingPlatformApplication>
    <!-- Enable NativeAOT compatibility -->
    <IsAotCompatible>true</IsAotCompatible>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LanguageExt.Core" />
    <PackageReference Include="TUnit" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Encina\Encina.csproj" />
    <ProjectReference Include="..\Encina.DomainModeling\Encina.DomainModeling.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE" Pack="true" PackagePath="" Link="LICENSE" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Encina.UnitTests" />
    <InternalsVisibleTo Include="Encina.IntegrationTests" />
    <InternalsVisibleTo Include="Encina.ContractTests" />
    <InternalsVisibleTo Include="Encina.PropertyTests" />
  </ItemGroup>

</Project>
