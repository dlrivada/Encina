<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>SimpleMediator.Caching.Hybrid</PackageId>
    <Description>HybridCache provider for SimpleMediator using Microsoft.Extensions.Caching.Hybrid. Provides multi-tier caching (L1 in-memory + L2 distributed) with built-in stampede protection and tag-based invalidation.</Description>
    <PackageTags>mediator;cqrs;caching;hybrid;distributed;memory</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\SimpleMediator.Caching\SimpleMediator.Caching.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Caching.Hybrid" />
    <PackageReference Include="Microsoft.Extensions.Options" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
    <PackageReference Include="Microsoft.CodeAnalysis.PublicApiAnalyzers" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="Microsoft.Extensions.Caching.Hybrid" />
    <Using Include="Microsoft.Extensions.Options" />
    <Using Include="Microsoft.Extensions.Logging" />
    <Using Include="SimpleMediator.Caching" />
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="PublicAPI.Shipped.txt" />
    <AdditionalFiles Include="PublicAPI.Unshipped.txt" />
  </ItemGroup>
</Project>
