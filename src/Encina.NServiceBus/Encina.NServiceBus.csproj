<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>Encina.NServiceBus</PackageId>
    <Description>NServiceBus integration for Encina - enterprise-grade message bus with saga support, retries, and dead-letter queues. Bridges NServiceBus message handlers to Encina requests and notifications.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NServiceBus" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
    <PackageReference Include="LanguageExt.Core" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Encina\Encina.csproj" />
  </ItemGroup>

</Project>
