      "pattern": "howtech\\.substack\\.com",
      "comment": "Returns HTTP 403 to automated link checkers"
    },
    {
      "pattern": "antondevtips\\.com",
      "comment": "Returns HTTP 403 to automated link checkers"
    },
    {
      "pattern": "visualstudiomagazine\\.com",
      "comment": "Returns HTTP 403 to automated link checkers"
    },
    {
      "pattern": "softwarepatternslexicon\\.com",
      "comment": "Returns HTTP 404 to automated link checkers"
    },
    {
      "pattern": "ico\\.org\\.uk",
      "comment": "Returns HTTP 404 to automated link checkers"
    },
    {
      "pattern": "cookiebot\\.com",
      "comment": "Returns HTTP 403 to automated link checkers"
    },
    {
      "pattern": "onetrust\\.com",
      "comment": "Returns HTTP 404 to automated link checkers"
    },
    {
      "pattern": "csrc\\.nist\\.gov",
      "comment": "Returns HTTP 404 to automated link checkers"
    },
    {
